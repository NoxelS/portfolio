const academic = [
    {
        title: 'Physik',
        location: '---',
        description: 'Master of Science',
        date: 'ab 2024',
        prog: true
    },
    {
        title: 'Physik',
        location: 'Universität des Saarlands',
        description: 'Bachelor of Science',
        date: '2024'
    },
    {
        title: 'Oberstufe',
        location: 'MSS der Integrierten Gesamtschule Nieder-Olm',
        description: 'Allgemeine Hochschulreife',
        date: '2020'
    },
    {
