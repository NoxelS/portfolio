        <div class="swiper-wrapper">
            {
                projects.map(project => (
                    <div class="swiper-slide overflow-hidden flex flex-col">
                        <img class="" src={project.image} alt="" />
                        <div class="flex flex-col py-4 gap-y-2">
                            <div class="flex flex-row justify-between items-end">
                                <div class="text-sm">{project.title}</div>
                                <div class="text-xs">{project.date}</div>
                            </div>
                            <div class="text-xs">{project.description}</div>
                            <div class="flex flex-row gap-x-2">
                                {project.tags.map(tag => (
                                    <div class="text-xs bg-secondary text-white-100 rounded-full px-2 py-1">{tag}</div>
                                ))}
                            </div>
                            <a class="text-sm flex flex-row items-center gap-x-2">
                                <div>View on GitHub</div> <Icon.ArrowRight fill="#000" width="14" height="14" />
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
        <div class="button-next-proj absolute top-1/2 right-0 z-50"><Icon.ArrowRight class="" width="24" height="24" /></div>
    </div>

    <small class="text-xs text-black-80 pt-4 pb-4">Meine Erfahrungen</small>

    <div class="swiper-work swiper">
        <div class="swiper-wrapper">
            {
                work.map(job => (
                    <div class="swiper-slide flex flex-col">
                        <div class="flex flex-col py-4 gap-y-2">
                            <div class="flex flex-row justify-between items-end">
                                <div class="flex flex-row items-end">
                                    <div class="text-lg leading-none">{job.title}</div>
                                    <div class="text-xs ml-2 text-black-60">{job.type}</div>
                                </div>
                                <div class="text-xs">{job.date}</div>
                            </div>
                            <a href={job.link} class="text-sm">
                                {job.location}
                            </a>
                            <div class="text-xs">
                                {job.skills.map(skill => (
                                    <div class="flex flex-row items-start gap-x-2">
                                        <Icon.Check fill="#000" width="14" height="14" />
                                        <div>{skill}</div>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
        <div class="button-next-work absolute top-1/2 right-0 z-50"><Icon.ArrowRight class="" width="24" height="24" /></div>
    </div>

    <small class="text-xs text-black-80 pt-4 pb-4">Meine Akademische Laufbahn</small>
