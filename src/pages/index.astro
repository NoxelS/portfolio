---

<Layout>
    <div class="text-xs text-black-60 dark:text-white-60 mb-4">Meine Projekte</div>
    <div class="flex flex-row items-center">
        <div class="swiper-proj swiper">
            <div class="swiper-wrapper">
                {
                    projects.map(project => (
                        <div class="swiper-slide overflow-hidden flex flex-col bg-gray dark:bg-[#0D131F] rounded-[20px] p-6 w-max min-w-[400px] max-w-[50%] h-auto md:w-full md:max-w-full">
                            <div class="flex flex-col gap-y-3">
                                <div class="flex flex-row justify-between items-end">
                                    <div class="flex flex-row items-center fill-black-80 dark:fill-white-85">
                                        <img class="mr-1" src="/icons/code.svg" alt="" />
                                        <div class="text-base text-black-80 dark:text-white-85">{project.title}</div>
                                    </div>
                                    <div class="text-[10px] text-black-40 dark:text-white-30">Letztes Update: {project.date}</div>
                                </div>
                                <div class="text-xs text-black-80 dark:text-white-85" set:html={project.description} />
                                <div class="flex flex-row gap-x-4">
                                    {project.tags.map(tag => (
                                        <div class="flex flex-row items-center">
                                            <div class="w-4 h-4 rounded-full mr-1" style={`background-color: ${tag.color};`} />
                                            <div class="text-black-60 dark:text-white-60 text-xs">{tag.text}</div>
                                        </div>
                                    ))}
                                </div>
                                {project.link ? (
                                    <a target="_blank" href={project.link} class="text-sm text-primary hover:underline">
                                        Zum Projekt
                                    </a>
                                ) : (
                                    ''
                                )}
                            </div>
                        </div>
                    ))
                }
                <div
                    class="swiper-slide overflow-hidden flex flex-col bg-transparent border-black-100 border-[1px] border-dashed rounded-[20px] mr-10 p-6 w-max min-w-[400px] max-w-[50%] h-auto"
                >
                    <div class="flex flex-col gap-y-3">
                        <div class="text-base text-black-80 dark:text-white-85">Weitere Projekte</div>
                        <div class="text-xs text-black-60 dark:text-white-60">
                            Über 36 weitere Projekte sind auf meiner <a
                                target="_blank"
                                href="https://github.com/NoxelS?tab=repositories"
                                class="text-primary hover:underline">GitHub Seite</a
                            > zu finden.
                        </div>
                    </div>
                </div>
            </div>
            <div class="gradwall"></div>
        </div>
        <div class="button-next-proj w-10 flex flex-row justify-end"><img src="/icons/arrow.svg" width="24" height="24" alt="" /></div>
    </div>

    <div class="text-xs text-black-60 dark:text-white-60 mb-4 mt-14">Meine Erfahrungen</div>
    <div class="flex flex-row items-center">
        <div class="swiper-work swiper">
            <div class="swiper-wrapper">
                {
                    work.map(job => (
                        <div class="swiper-slide overflow-hidden flex flex-col bg-transparent rounded-[5px] border-black-100 dark:border-white-85 border-[1px] p-6 w-[600px] h-auto last:mr-10 md:w-full md:border-0 md:pr-6 md:bg-gray md:rounded-[20px]">
                            <div class="flex flex-col">
                                <div class="flex flex-row justify-between items-end md:flex-col md:items-start md:justify-start">
                                    <div class="flex flex-row items-end md:flex-col md:items-start">
                                        <div class="text-base text-black-80 dark:text-white-85">{job.title}</div>
                                        <a
                                            href={job.link}
                                            target="_blank"
                                            class={`text-sm hidden md:block ${job.link ? 'text-primary hover:underline' : 'text-black-80 dark:text-white-85'}`}
                                        >
                                            {job.location}
                                        </a>
                                        <div class="text-xs ml-2 md:ml-0 mb-[2px] text-black-60 dark:text-white-60">{job.type}</div>
                                    </div>
                                    <div class="text-xs mb-[2px] text-black-80 dark:text-white-85">{job.date}</div>
                                </div>
                                <a
                                    href={job.link}
                                    target="_blank"
                                    class={`text-sm md:hidden ${job.link ? 'text-primary hover:underline' : 'text-black-80 dark:text-white-85'}`}
                                >
                                    {job.location}
                                </a>
                                <ul class="mt-2">
                                    {job.skills.map(tag => (
                                        <li class="list-item list-disc list-outside ml-4 text-black-60 dark:text-white-60 text-xs mt-1">{tag}</li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    ))
                }
            </div>
            <div class="gradwall"></div>
        </div>
        <div class="button-next-work w-10 flex flex-row justify-end"><img src="/icons/arrow.svg" width="24" height="24" alt="" /></div>
    </div>
    <div class="text-xs text-black-60 dark:text-white-60 mb-4 mt-14">Meine akademische Laufbahn</div>
    <div class="flex flex-row items-center">
        <div class="swiper-aca swiper">
            <div class="swiper-wrapper">
                {
                    academic.map(degree => (
                        <div
                            class={`swiper-slide overflow-hidden flex flex-col min-w-[250px] rounded-[5px] p-6 w-max h-auto last:mr-10 md:w-[90%] ${
                                degree.prog ? 'border-black-100 border-[1px] border-dashed' : 'bg-gray dark:bg-[#0D131F]'
                            }`}
                        >
                            <div class="flex flex-col">
                                <div class="flex flex-row items-center justify-between">
                                    <div class="text-xs text-black-60 dark:text-white-60">{degree.location}</div>
                                    <div class="text-xs text-black-60 dark:text-white-60 ml-20">{degree.date}</div>
                                </div>
                                <div class="text-black-80 dark:text-white-85 text-base">{degree.description}</div>
                                <div class="text-black-80 dark:text-white-85 text-sm">{degree.title}</div>
                            </div>
                        </div>
                    ))
                }
            </div>
            <div class="gradwall"></div>
        </div>
        <div class="button-next-aca w-10 flex flex-row justify-end"><img src="/icons/arrow.svg" width="24" height="24" alt="" /></div>
    </div>

    <script is:inline>
        const swiperproj = new Swiper('.swiper-proj', {
            // Optional parameters
            direction: 'horizontal',
            loop: false,

            slidesPerView: 'auto',
            spaceBetween: 20,
            // If we need pagination
            // Navigation arrows
            navigation: {
                nextEl: '.button-next-proj'
                // prevEl: '.button-prev'
            }

            // And if we need scrollbar
        });
        const swiperwork = new Swiper('.swiper-work', {
            // Optional parameters
            direction: 'horizontal',
            loop: false,

            slidesPerView: 'auto',
            spaceBetween: 20,
            // If we need pagination
            // Navigation arrows
            navigation: {
                nextEl: '.button-next-work'
                // prevEl: '.button-prev'
            }

            // And if we need scrollbar
        });
        const swiperjobs = new Swiper('.swiper-aca', {
            // Optional parameters
            direction: 'horizontal',
            loop: false,

            slidesPerView: 'auto',
            spaceBetween: 20,
            // If we need pagination
            // Navigation arrows
            navigation: {
                nextEl: '.button-next-aca'
                // prevEl: '.button-prev'
            }

            // And if we need scrollbar
        });
    </script>
</Layout>

<style is:global>
    .swiper {
        width: 100%;
    }
    .gradwall {
        @apply h-full absolute top-0 right-0 z-50 flex flex-col items-center justify-center bg-gradient-to-r from-transparent to-white-100 dark:to-[#161F30] w-20 md:w-6;
    }
</style>
